<body class = 'color'>
<h1>Sign in</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:session, url: signin_path) do |f| %>

      <div><%= f.label :email %></div>
      <div><%= f.email_field :email, class: 'form-control' %></div>

      <div><%= f.label :password %>
      <div><%= f.password_field :password, class: 'form-control' %></div>

      <div><%= f.submit "Sign in", class: "btn btn-primary" %></div>
    <% end %>

    <p>New user? <%= link_to "Sign up", signup_path %></p>
  </div>
</div>
</body>