<body class='color'>
<h1>Sign up</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user, url: signup_path) do |f| %>
      <%= render 'share/error_messages' %>
      <div><%= f.label :name %></div>
      <div><%= f.text_field :name, class: 'form-control' %></div>

      <div><%= f.label :email %></div>
      <div><%= f.email_field :email, class: 'form-control' %></div>

      <div><%= f.label :password %></div>
      <div><%= f.password_field :password, class: 'form-control' %></div>

      <div><%= f.label :password_confirmation, "Confirmation" %></div>
      <div><%= f.password_field :password_confirmation, class: 'form-control' %></div>


      <%= f.submit "Create my account", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
</body>